    <script type="text/javascript">

        $(document).ready(function () {
            function fetch_students() {
                $.ajax(
                    {
                        url: "http://localhost:8888/myslimsite/public/profesor/materii/" + {{ ID_m }} +"/studenti/" + {{ student_ID }} +"/prezente/" + {{ tip }},
                        dataType: 'JSON',
                        success: function (data) {
                            var html = '';
                            console.log(data);
                            $('#materie').html(data.materie);
                            $('#info_generale').html(`<tr><td><strong>E-mail student (@e-uvt.ro)</strong></td><td>` + data.username + `</td></tr>`);
                            if (data.tip == 'curs') {
                                $('#table_curs').html(`<tr><td><strong>Prezente curs</strong></td><td contenteditable="true">` + data.numar + `</td></tr>`);
                                $('#table_seminar_lab').html(`<tr><td><strong>Prezente seminar/laborator</strong></td><td><a class='alert alert-success' href='http://localhost:8888/myslimsite/public/profesor/materii/` + data.materie_id + `/studenti/` + data.student_id + `/prezente/seminar_laborator'><strong>Accesibile aici!</strong></a>` + `</td></tr>`);
                            } else if (data.tip == 'seminar_laborator') {
                                if (data.numar != undefined && data.numar != null)
                                    $('#table_seminar_lab').html(`<tr><td><strong>Prezente seminar/laborator</strong></td><td contenteditable="true">` + data.numar + `</td></tr>`);
                                else $('#table_seminar_lab').html(`<tr><td><strong>Prezente seminar/laborator</strong></td><td>` + `--` + `</td></tr>`);
                                $('#table_curs').html(`<tr><td><strong>Prezente curs</strong></td><td><a class='alert alert-success' href='http://localhost:8888/myslimsite/public/profesor/materii/` + data.materie_id + `/studenti/` + data.student_id + `/prezente/curs'><strong>Accesibile aici!</strong></a>` + `</td></tr>`);
                            }
                        },
                        error: function () {
                            console.log('Error ajax!');
                        }
                    }
                );
            }

            fetch_students();
        });

    </script>


